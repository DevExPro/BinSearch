<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.binsearch.binsearch.SearchResult">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number: "
        android:id="@+id/numberLabel"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ems="10"
        android:id="@+id/DescriptionVal"
        android:inputType="text|textImeMultiLine"
        android:lines="1"
        android:maxLines="1"
        android:layout_alignBaseline="@+id/descriptionLabel"
        android:layout_alignBottom="@+id/descriptionLabel"
        android:layout_toRightOf="@+id/descriptionLabel"
        android:layout_toEndOf="@+id/descriptionLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ems="10"
        android:id="@+id/NumberVal"
        android:inputType="text|textImeMultiLine"
        android:nextFocusForward="@+id/LocationVal"
        android:lines="1"
        android:maxLines="1"
        android:layout_alignBaseline="@+id/numberLabel"
        android:layout_alignBottom="@+id/numberLabel"
        android:layout_toRightOf="@+id/numberLabel"
        android:layout_toEndOf="@+id/numberLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ems="10"
        android:id="@+id/LocationVal"
        android:inputType="text|textImeMultiLine"
        android:nextFocusForward="@+id/DescriptionVal"
        android:lines="1"
        android:maxLines="1"
        android:layout_alignBaseline="@+id/locationLabel"
        android:layout_alignBottom="@+id/locationLabel"
        android:layout_toRightOf="@+id/locationLabel"
        android:layout_toEndOf="@+id/locationLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location: "
        android:id="@+id/locationLabel"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/NumberVal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description: "
        android:id="@+id/descriptionLabel"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/LocationVal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveInfo"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/DescriptionVal"
        android:layout_centerHorizontal="true" />
</RelativeLayout>